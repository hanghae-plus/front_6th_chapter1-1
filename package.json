{
  "name": "front-6th-chapter1-1",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:hash": "vite --open ./index.hash.html",
    "build:prod": "NODE_ENV=production vite build",
    "lint:fix": "eslint --fix",
    "prettier:write": "prettier --write ./src",
    "preview:prod": "NODE_ENV=production vite preview",
    "test": "vitest",
    "test:hard:basic": "vitest --run",
    "test:hard:advanced": "playwright test e2e-hard",
    "test:easy:basic": "playwright test e2e-easy.basic",
    "test:easy:advanced": "playwright test e2e-easy.advanced",
    "test:ui": "vitest --ui",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:report": "npx playwright show-report",
    "test:generate": "playwright codegen localhost:5173",
    "prepare": "husky",
    "deloy": "pnpm run build && gh-pages -d dist"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "**/*.{css,scss,md,json,yml,yaml,html}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.16.0",
    "@playwright/test": "latest",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/user-event": "^14.6.1",
    "@vitest/coverage-v8": "latest",
    "@vitest/ui": "^2.1.8",
    "eslint": "^9.16.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "gh-pages": "^6.3.0",
    "globals": "^15.13.0",
    "husky": "^9.1.7",
    "jsdom": "^25.0.1",
    "lint-staged": "^15.2.11",
    "msw": "^2.10.2",
    "prettier": "^3.4.2",
    "vite": "npm:rolldown-vite@latest",
    "vitest": "latest"
  },
  "msw": {
    "workerDirectory": [
      "public"
    ]
  }
}
